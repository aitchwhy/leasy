{
  "name": "@leasy/server",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev:server": "bun run --filter @leasy/server dev",
    "dev:client": "bun run --filter @leasy/client dev",
    "build:server": "bun run --filter @leasy/server build",
    "build:client": "bun run --filter @leasy/client build",
    "build": "bun run build:client && bun run build:server",
    "test": "bun test && playwright test",
    "clean": "rm -rf node_modules apps/*/node_modules",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "hono": "^4.8.10",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "wrangler": "^4.17.0"
  }
}
